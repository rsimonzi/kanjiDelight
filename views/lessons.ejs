<%- include('header') -%>

<br />

<% const numOfDocs = 11; %>

<ul class='toc'>
  <h2 class="tocc">Table of Contents</h2>
  <h2><button type="button" class='toc'><i class="fas fa-caret-square-left"></i></button></h2>

  <%  for (let i = 0; i < numOfDocs; i++) {  %>
  <li>
    <h4><a href="/lessons/<%= i + 1 %>">Lesson <%= i + 1 %></a></h4>
  </li>
  <% } %>
  });

</ul>
<h4 class='pageno'><%= pageNo %></h4>

<br />

<h3><%= chapter %></h3>
<h3><%= lesson %></h3>

<% let x = " " %>
<% list.forEach(function(value){ %>
<%  x += " " + value + " "  %>
<% }) %>
<h3><%= x %></h3>

<br />
<br />

<table class='no-borders' style="width:85%">
  <tr>
  </tr>
  <% for (let i = 0; i < sentences.length; i++){ %>
  <tr>
    <td><%= speakers[i] + ' ' + ':' + ' ' + ' ' %></td>
    <td><%= sentences[i] + ' ' + ' ' %></td>
    <td><%= masuSentences[i] + ' ' + ' ' %></td>
    <td><%= translatedSentences[i] %></td>
  </tr>
  <% } %>
</table>
<br />
<br />
<h3>単語 | たんご | Vocabulary</h3>
<br />

<table class="borders" style="width:75%">
  <tr class="borders">
    <th class="borders">詞 | ことば | word</th>
    <th class="borders">平仮名 | ひらがな | hiragana</th>
    <th class="borders">意味 | いみ | meaning</th>
    <th class="borders">品詞 | ひんし | part of speech</th>
    <th class="borders">発音 | はつおん | pronunciation</th>
  </tr>

  <%  for (let i = 0; i < word.length; i++) { %>
  <tr class="borders">
    <td class="borders"><%= word[i]  %></td>
    <td class="borders"><%= hiragana[i] %></td>
    <td class="borders"><%= meaning[i] %></td>
    <td class="borders"><%= partOfSpeech[i] %></td>
    <td class="borders"><%= pronunciation[i] %></td>
  </tr>
  <%  } %>
</table>
<br />
<br />
<h3 class="tocc">文法 | ぶんぽう | Grammar</h3>
<br />
<table class='no-borders' style="width:90%">
  <%  grammarPoints.forEach(function(grammarPoint){ %>
  <tr>
    <td><%= grammarPoint + ' ' + ' ' + ' ' %></td>
  </tr>
  <% }) %>
</table>

<br />
<br />
<h3 class="tocc">演習 | えんしゅう | Exercises</h3>
<br />
<table class='no-borders' style="width:90%">
  <% exercises.forEach(function(exercise) { %>
  <tr>
    <td><%= exercise + ' ' + ' ' + ' ' %></td>
  </tr>
  <% }) %>
</table>
<br />
<br />
<br />
<br />
<br />

<%- include('footer') -%>
